{% extends 'back.html.twig'%}
{% block content %}


    {{ form_start(form) }}


    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="bordered-layout-basic-form">
                        </h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <div class="card-text">
                                <p>Creation de l'environnement de travail</p>
                            </div>

                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-clipboard"></i> Sprint</h4>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">nom equipe</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.nomEquipe,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">projet</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.ideProjet,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">scrum_master</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.ideScrumMaster,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 1</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso1,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 2</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso2,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 3</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso3,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 4</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso4,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 5</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso5,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Perso 1</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.idePerso6,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-primary'}}) }}


                                {{ form_end(form) }}
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </section>


    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title" id="bordered-layout-basic-form">affichage</h4>
                            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collpase show">
                            <div class="card-body">
                                <div class="card-text">
                                    <p>Tous les blackLog Sprint que vous avez cr√©e</p>
                                    <h4 class="form-section"><i class="ft-clipboard"></i> affichage</h4>
                                </div>


                                <div class="table-responsive">
                                    <table  class="table table-striped table-bordered selection-multiple-rows" class="table table-striped table-bordered dataex-html5-message">
                                        <thead class="thead-dark" >
                                        <tr>
                                            <th scope="col">nom equipe</th>
                                            <th scope="col">scrum master</th>
                                            <th scope="col">perso 1</th>
                                            <th scope="col">perso 2</th>
                                            <th scope="col">perso 3</th>
                                            <th scope="col">perso 4</th>
                                            <th scope="col">perso 5</th>
                                            <th scope="col">perso 6</th>
                                            <th scope="col">action</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                    {% for b in b %}
                                            <td>{{b.nomEquipe }}</td>
                                            <td>{{b.ideScrumMaster }}</td>
                                            <td>{{b.idePerso1 }}</td>
                                            <td>{{b.idePerso2 }}</td>
                                            <td>{{b.idePerso3 }}</td>
                                            <td>{{b.idePerso4 }}</td>
                                            <td>{{b.idePerso5 }}</td>
                                            <td>{{b.idePerso6 }}</td>

                                            <td> <section id="button-shadow">
                                                    <a class="btn btn-danger btn-min-width box-shadow-5 mr-1 mb-1"   href="{{ path('team_delete',{'id':b.idEquipe}) }}" >Delete</a>
                                                </section> </td>
                                        </tr>
                                        {% endfor %}



                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

            </div>
        </div>
    </section>

{% endblock %}
