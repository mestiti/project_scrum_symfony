{% extends 'back.html.twig'%}
{% block content %}
    {{ form_start(form) }}


    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        {% set break = false %}
                        <h4 class="card-title" id="bordered-layout-basic-form">
                        </h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <div class="card-text">
                                <p>Creation de l'environnement de travail</p>
                            </div>

                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-clipboard"></i> Sprint</h4>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">nom projet</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.nomProjet,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>


                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Date début projet</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.dateDebutProjet,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Date fin projet</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.dateFinProjet,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">description projet</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.descriptionProjet,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Product owner</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.ideProductOwner,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-primary'}}) }}


                                {{ form_end(form) }}
                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>
    </section>


    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <form action="{{ path('ajout') }}" method="get">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title" id="bordered-layout-basic-form">affichage</h4>
                            <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collpase show">
                            <div class="card-body">
                                <div class="card-text">
                                    <p>Tous les blackLog Sprint que vous avez crée</p>
                                    <h4 class="form-section"><i class="ft-clipboard"></i> affichage</h4>
                                </div>


                                <div class="table-responsive">
                                    <table  class="table table-striped table-bordered selection-multiple-rows" class="table table-striped table-bordered dataex-html5-message">
                                        <thead class="thead-dark" >
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">nom projet</th>
                                            <th scope="col">product owner</th>
                                            <th scope="col">description projet</th>
                                            <th scope="col">date début projet</th>
                                            <th scope="col">date fin projet</th>
                                            <th scope="col">action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            {% for forums in forums %}
                                            <td>{{ forums.id_projet }}</td>
                                            <td>{{forums.nom_projet }}</td>
                                            <td>{{forums.username }}</td>
                                            <td>{{forums.description_projet }}</td>
                                            <td>{{forums.date_debut_projet }}</td>
                                            <td>{{forums.date_fin_projet }}</td>

                                            <td> <section id="button-shadow">
                                                    <a class="btn btn-danger btn-min-width box-shadow-5 mr-1 mb-1"   href="{{ path('project_delete',{'id':forums.id_projet}) }}" >Delete</a>
                                                </section> </td>

                                        </tr>
                                        {%  endfor %}


                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </section>

{% endblock %}
