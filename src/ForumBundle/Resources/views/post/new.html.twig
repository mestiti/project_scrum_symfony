{% extends 'back.html.twig' %}

        {% block content %}
            <div class="blog">
                <div class="container">
                    <div class="blog-top">

         <div style="border-radius: 1px;
                background-color: #3bafda;
                margin-top: 50px;
                margin-bottom: 20px ;
                padding: 20px;"><h3 style="text-align: left;color: white">Post creation</h3></div>
