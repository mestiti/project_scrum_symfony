                <div>{{ form_widget(form.title) }}</div>

                <div ><h4 style="padding-top: 20px;padding-bottom: 10px;">Details:</h4>
                {{ form_widget(form.text) }}
                </div>
            </div>
                {{ form_widget(form) }}
