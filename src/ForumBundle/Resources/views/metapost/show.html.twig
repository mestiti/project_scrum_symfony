{% extends 'back.html.twig' %}
{% block content %}
    <h1>Metapost</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ metapost.id }}</td>
            </tr>
            <tr>
                <th>Votetype</th>
                <td>{% if metapost.votetype %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('metapost_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('metapost_edit', { 'id': metapost.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
