{% extends 'back.html.twig' %}

{% block content %}
    <div class="blog">
        <div class="container">
            <div class="blog-top">
                <h1>Details</h1>

                <div class="container" style="width:80%;float: left;background-color: gray;padding: 1%;border-radius: 1px">
                    <div style="float:left;width:80%;background-color: #e6e6e6;padding:10px;border-radius: inherit">{{ comment.content }} </div>
                </div>
                <div style="background-color:#e6e6e6 ; border-radius: 1px;width: 30%;padding:1%;margin-top: 8%"><b>Comment By: {{ comment.user.username }}</b> </div>
                <div>


                    <a href="{{ path('post_show', { 'id': comment.post.id }) }}" class="btn btn-dark square btn-min-width mr-1 mb-1" style="margin-top: 10px">Back to Post</a>
                    {% if comment.user.id == user.id %}<a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-warning" style="margin: 2%; float: bottom">Edit</a>{% endif %}
                </div>
            </div></div></div>
{% endblock %}
