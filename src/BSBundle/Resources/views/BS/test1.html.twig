{% extends 'back.html.twig'%}
{% block content %}

<section id="basic-form-layouts">
    <div class="row">
        <div class="col-md-12">
            <form action="{{ path('modifier') }}" method="get">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="bordered-layout-basic-form">Creation du sprint</h4>
                    <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        <div class="card-text">
                            <p>Creation de l'environnement de travail</p>
                        </div>

                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-clipboard"></i> modifier sprint</h4>
                                <div class="form-group row">


                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">nombre de sprint</label>
                                    <fieldset>
                                        <div class="input-group">
                                            <input type="number" class="data-bts-button-down-class" value={{nbr}} data-bts-min="2" data-bts-max="12" name="nbr"/>
                                            <input type="hidden" value={{id}} data-bts-min="2" name="id"/>
                                        </div>
                                    </fieldset>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-check-square-o"></i> Save
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>


    </div>

    {% endblock %}
