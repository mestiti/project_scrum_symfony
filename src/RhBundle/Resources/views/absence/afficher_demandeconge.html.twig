
{% extends 'back.html.twig' %}


    {% block content %}


        <section id="pdf-page-size">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-content collapse show">
                            <div class="card-body card-dashboard">

                                <table class="table table-striped table-bordered dataex-html5-orientation">
                                    <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Date Debut</th>
                                        <th>Date Fin</th>
                                        <th>Raison</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        {%  for i in demandes  %}

                                        <td>{{ i.ideUser.Nom }}</td>
                                        <td>{{ i.dateDebut | date("m/d/y")}}</td>
                                        <td>{{ i.dateFin | date("m/d/y")}}</td>
                                        <td>{{ i.raison }}</td>


                                        <td> <section id="button-shadow">

                                                <a class="btn btn-warning btn-min-width box-shadow-4 mr-1 mb-1"   href="{{ path('affecter',{'id':i.idDconge}) }}" >Traiter</a>


                                            </section> </td>

                                    </tr>
                                    {% endfor %}

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>



    {% endblock %}


