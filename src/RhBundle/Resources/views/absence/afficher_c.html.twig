{% extends 'back.html.twig' %}

    {% block content %}


        <section id="row-selection">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-content collapse show">
                            <div class="card-body">



                                <br/>
                                <br/>
                                <table class="table table-striped table-bordered selection-multiple-rows">
                                    <thead>
                                    <tr>

                                        <th>Nom</th>
                                        <th>Date Debut</th>
                                        <th>Date Fin</th>
                                        <th>Etat</th>
                                        <th>Action</th>


                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        {%  for i in conges  %}

                                        <td>{{ i.ideDconge.ideUser.Nom }}</td>
                                        <td>{{ i.ideDconge.dateDebut | date("m/d/y")}}</td>
                                        <td>{{ i.ideDconge.dateFin | date("m/d/y")}}</td>
                                        <td>{{ i.description}}</td>

                                        <td> <section id="button-shadow">

                                                <a class="btn btn-danger btn-min-width box-shadow-5 mr-1 mb-1" href="{{ path('deletec',{'id':i.idConge}) }}" >Delete</a>



                                            </section> </td>







                                    </tr>
                                    {% endfor %}

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% endblock %}






