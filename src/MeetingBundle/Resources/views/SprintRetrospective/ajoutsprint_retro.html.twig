{% extends 'back.html.twig' %}

    {% block content %}

        <section id="row-selection">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-content collapse show">
                            <div class="card-body">


                                <br/>
                                <br/>
                                &nbsp; <section id="button-shadow">

                                    <a class="btn btn-info btn-min-width box-shadow-3 mr-1 mb-1"  data-toggle="modal" data-show="false" data-target="#show"  >Ajouter</a>
                                    <div class="modal fade text-left" id="show" tabindex="-1" role="dialog" aria-labelledby="myModalLabel5" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="myModalLabel5">Ajouter Sprint Retrospective</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        {{ form_start(f, {'method': 'post', 'action': path('ajoutsr')}) }}
                                                        {{ form_label(f.descriptionTodo, 'Remarque TODO' ) }}
                                                        <textarea id="donationinput7" rows="5" class="form-control square"{{ form_widget(f.descriptionTodo, { 'attr': {'class': 'form-control'} }) }}</textarea>



                                                        {{ form_label(f.dateSprintRetrospective, 'Date' | trans, { 'attr': {'class': 'form-control'} }) }}
                                                        {{ form_widget(f.dateSprintRetrospective, { 'attr': {'class': 'form-control'} }) }}

                                                        {{ form_label(f.ideProjet, 'Nom Projet' )}}
                                                        {{ form_widget(f.ideProjet, { 'attr': {'class': 'form-control'} }) }}



                                                        {{ form_label(f.ideEquipe, 'Nom Equipe' )}}
                                                        {{ form_widget(f.ideEquipe, { 'attr': {'class': 'form-control'} }) }}

                                                        {{ form_label(f.ideSprint, 'Nom Sprint' )}}
                                                        {{ form_widget(f.ideSprint, { 'attr': {'class': 'form-control'} }) }}


                                                    </div>


                                                </div>
                                                <div class="modal-footer" >
                                                    <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Close</button>
                                                    {{ form_row(f.save, { 'attr': {'class': 'btn btn-outline-primary'} }) }}
                                                    {{ form_end(f) }}

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </section>
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                <table class="table table-striped table-bordered selection-multiple-rows">
                                    <thead>
                                    <tr>
                                        <th>Nom Sprint</th>
                                        <th>Nom Equipe</th>
                                        <th>Nom Projet</th>
                                        <th>Description</th>
                                        <th>Date</th>
                                        <th>Action</th>




                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        {%  for i in sp  %}

                                        <td>{{ i.ideSprint.description }}</td>
                                        <td>{{ i.ideEquipe.nomEquipe }}</td>
                                        <td>{{ i.ideProjet.nomProjet }}</td>
                                        <td>{{ i.descriptionTodo }}</td>
                                        <td>{{ i.dateSprintRetrospective| date("m/d/y") }}</td>
                                        <td> <section id="button-shadow">



                                                <a class="btn btn-info btn-min-width box-shadow-3 mr-1 mb-1"   href="{{ path('updatesr',{'id':i.idSprintRetrospective}) }}" >Edit</a>
                                                <a class="btn btn-danger btn-min-width box-shadow-5 mr-1 mb-1"   href="{{ path('deletesr',{'id':i.idSprintRetrospective}) }}" >Delete</a>


                                            </section> </td>




                                    </tr>

                                    {% endfor %}

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


    {% endblock %}