
{% extends 'front.html.twig'%}
     {% block content %}
<style>
    div {margin-left: auto;
        margin-right: auto;}
    h6 { color: red}


    .cen{margin-left: 600px}


</style>

<div class="row">

    <div class="col-12">
        <div class="card">
            {{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}
            <div class="d">
                <h4 class="form-section"><i class="ft-clipboard"></i> feature</h4>

                <div class="form-group row">

                    <div class="col-md-9">
                        {{ form_widget(f.ideProjet,{ 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">


                    <div class="col-md-9">
                        <div class="position-relative has-icon-left">
                            <div class="form-control-position">
                                <i class="fa fa-file"></i>
                            </div>
                            {{ form_widget(f.feature,{ 'attr': {'class': 'form-control'}}) }}
                            <h6>  {{ form_errors(f.feature)}}</h6>

                        </div>
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-md-9">
                        {{ form_widget(f.captcha,{ 'attr': {'class': 'form-control'}})}}
                        <h6> {{ form_errors(f.captcha)}}</h6>
                    </div>
                </div>


                <div class="form-actions">
                    <div class="cen">
                        {{ form_row(f.save,{ 'attr': {'class': 'btn bg-blue width-200 white buttonAnimation'}}) }}
                    </div>
                </div>

            </div>

            {{  form_end(f)}}

            {% endblock %}
