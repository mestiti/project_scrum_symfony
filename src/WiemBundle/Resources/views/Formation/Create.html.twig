{% extends 'back.html.twig'%}

{% block content %}


<div class="container mt-4">

</div>
    {{ form_start (f) }}
    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        {% set break = false %}

                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">


                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-clipboard"></i>Ajouter formation</h4>

                                <div class="form-group row">

                                    <label class="col-md-3 label-control" for="projectinput1">Nom Formation
                                    </label>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(f.nomFormation,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>


                                <div class="form-group row">

                                    <label class="col-md-3 label-control" for="projectinput1">Sujet formation
                                    </label>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(f.sujetFormation,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">

                                    <label class="col-md-3 label-control" for="projectinput1">Formateur
                                    </label>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(f.ideFormateur,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 label-control" for="projectinput1">Liste personne</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(f.listePersonne,{ 'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-3 label-control"  for="projectinput1">Date</label>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="form-control">

                                            {{ form_widget(f.date,  {type : 'date'}  ) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Time debut</label>

                                    <div class="col-md-6">
                                        <div class="position-relative has-icon-left">

                                            <div class="form-control">
                                                        <i class="ft-clock">
                                                        </i>

                                                        {{ form_widget(f.timeDebut,{ type : 'time' },{class :'form-control'}) }}
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label class="col-md-3 label-control">Time fin</label>

                                    <div class="col-md-6">
                                        <div class="position-relative has-icon-left">


                                            <div class="form-control">
                                                <i class="ft-clock">
                                                    {{ form_widget(f.timeFin,{ type : 'time' },{class :'form-control'}) }}
                                                </i>
                                            </div>



                                        </div>
                                    </div>
                                </div>



                                {{ form_widget(f.save,{ 'attr': {'class': 'btn btn-primary'}}) }}








                            </div>

                        </div>
                    </div>
                </div>


        </div>


        </div>

        {{ form_end(f) }}
    </section>

{% endblock %}